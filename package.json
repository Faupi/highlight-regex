{
    "name": "highlight-regex",
    "displayName": "Highlight - Regex",
    "description": "Highlight with regex",
    "version": "0.1.1",
    "publisher": "mblet",
    "engines": {
        "vscode": "^0.0.0"
    },
    "main": "./extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/MickaelBlet/highlight-regex.git"
    },
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "commands": [
            {
                "command": "highlight.regex.showReadme",
                "title": "Show readme of highlight regex"
            }
        ],
        "configuration": {
            "properties": {
                "highlight.regex.regexs": {
                    "type": "array",
                    "markdownDescription": "Set search regex with decoration\n\nExample at [README.md](command:highlight.regex.showReadme)\n\nDecoration at [API docs decoration](https://code.visualstudio.com/api/references/vscode-api#DecorationRenderOptions)",
                    "default": [
                        {
                            "language": "c|cpp|java",
                            "block": "/\\*[^]*?\\*/|//[^]*?(?:(?<!\\\\)$)",
                            "blockFlag": "gm",
                            "blockLimit": 25000,
                            "regex": "\\b(TODO)\\b|\\b(TADA)\\b",
                            "regexFlag": "gmi",
                            "regexLimit": 25000,
                            "decorations": [
                                {
                                    "index": 1,
                                    "color": "#FFFFFF",
                                    "backgroundColor": "#FF990090",
                                    "border": "1px solid #FF990050",
                                    "borderRadius": "4px",
                                    "fontWeight": "bold",
                                    "overviewRulerColor": "#FF9900FF",
                                    "overviewRulerLane": 4
                                },
                                {
                                    "index": 2,
                                    "color": "#FFFFFF",
                                    "backgroundColor": "#FF000090",
                                    "border": "1px solid #FF000050",
                                    "borderRadius": "4px",
                                    "fontWeight": "bold",
                                    "overviewRulerColor": "#FF0000FF",
                                    "overviewRulerLane": 4
                                }
                            ]
                        }
                    ]
                },
                "highlight.regex.defaultBlockLimit": {
                    "type": "integer",
                    "description": "Set default limit of search block",
                    "default": 50000
                },
                "highlight.regex.defaultBlockFlag": {
                    "type": "string",
                    "description": "Set default flag of block",
                    "default": "gm"
                },
                "highlight.regex.defaultRegexLimit": {
                    "type": "integer",
                    "description": "Set default limit of search regex",
                    "default": 50000
                },
                "highlight.regex.defaultRegexFlag": {
                    "type": "string",
                    "description": "Set default flag of block",
                    "default": "gm"
                },
                "highlight.regex.timeout": {
                    "type": "integer",
                    "description": "Set timeout after applicate decorations",
                    "default": 200
                }
            }
        }
    }
}