{
	"name"       : "mblet-regex-hightlight",
	"displayName": "mblet-regex-hightlight",
	"description": "Add simply hightlight from regex",
	"version"    : "1.0.0",
	"publisher"  : "mblet",
    "engines"    : { "vscode": "^1.25.0" },
    "main"       : "./extension.js",
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration":{
            "title": "mblet regex hightlight configuration",
            "properties": {
                "mblet-regex-hightlight.regex": {
                    "type": "array",
                    "description": "set search regex and css",
                    "default": [
                        {
                            "block": "/\\*[^]*?\\*/|//.*",
                            "blockFlags": "gm",
                            "regex": "\\bTODO\\b",
                            "regexFlags": "gmi",
                            "index": 0,
                            "limit": 100,
                            "css": {
                                "color": "#000000",
                                "backgroundColor": "#FF9900",
                                "border": "1px solid #000000; margin:0px -2px; padding:0px 16px;",
                                "borderRadius":"7px",
                                "fontWeight": "bold",
                                "overviewRulerColor": "#FF9900FF",
                                "overviewRulerLane": 4
                            }
                        }
                    ]
                },
                "mblet-regex-hightlight.setTimeout": {
                    "type": "integer",
                    "description": "set timeout after applicate decorations",
                    "default": 200
                }
            }
        }
    },
    "devDependencies": {
        "vscode": "^1.1.22"
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    }
}